{
  "private": true,
  "repository": "https://github.com/TryGhost/NQL",
  "author": "Ghost Foundation",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "eslintIgnore": [
    "**/node_modules/**"
  ],
  "scripts": {
    "dev": "echo \"Implement me!\"",
    "presetup": "yarn",
    "setup": "lerna bootstrap",
    "test:parent": "NODE_ENV=testing c8 --all --check-coverage --reporter text --reporter cobertura mocha './test/**/*.test.js'",
    "test": "yarn test:parent && lerna run test",
    "lint": "lerna run lint",
    "preship": "yarn test",
    "ship": "lerna publish"
  },
  "devDependencies": {
    "c8": "7.11.0",
    "eslint": "8.10.0",
    "eslint-plugin-ghost": "2.13.0",
    "mocha": "9.2.1",
    "should": "13.2.3",
    "sinon": "13.0.1"
  }
}
